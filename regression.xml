<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="AutomationSuite" verbose="1">

    <!-- Register listener -->
    <listeners>
        <listener class-name="listeners.ListenerEx"/>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <!-- Test block -->
    <test name="Verify User Able To Backwards">

        <classes>
            <!-- Full package name is REQUIRED -->
            <class name="test.VerifyUserNavigateToPaymentPage"/>
        </classes>

    </test>

</suite>
